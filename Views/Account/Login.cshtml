@model Restaurant.ViewModels.LoginViewModel


    <div class="card w-50 shadow m-0 ml-auto mr-auto flex-column mt-5">
        <div class="h4 card-header bg-danger text-center" style="color: white">
            Авторизация
        </div>
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group col-sm-7 px-0 mx-auto mb-3">
                    <label class="col-sm card-title" asp-for="Email"></label>
                    <input class="form-control input-group-sm" asp-for="Email" />
                    <span class="form-text text-muted" asp-validation-for="Email"></span>
                </div>
                <div class="form-group col-sm-7 px-0 mx-auto mb-3">
                    <label class="col-sm card-title" asp-for="Password"></label>
                    <input class="form-control input-group-sm" asp-for="Password" />
                    <span class="form-text text-muted" asp-validation-for="Password"></span>
                </div>
                <div class="form-check col-sm-7 px-0 mx-auto ml-5">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="card-title" asp-for="RememberMe"></label>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-center pt-3 pb-4">
                <input class="btn btn-danger" type="submit" value="Войти" />
            </div>
        </form>
    </div>