@model IEnumerable<Restaurant.Models.Data.User>

<div class="row my-3">
    <h2 class="col-sm-6 pr-0"> Работа с ролями пользователей </h2>
    <div class="col-md container-fluid p-0 m-0"><hr class="mt-4 hr-style-1" /></div>
</div>
<nav class="col navbar navbar-expand-sm navbar-toggleable-sm bg-light">
    <div class="navbar d-inline-flex flex-sm-row">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="Index"
                   asp-controller="Users">Назад</a>
            </li>          
        </ul>
    </div>
</nav>
<div class="vh-100 overflow-auto">
    <table class="table table-striped table-hover">
        <thead class="bg-secondary text-light fix-header">
            <tr>
                <th>Email</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.PersonName</td>
                <td>@user.PersonSurname</td>
                <td>
                    <a class="btn btn-link text-dark" asp-action="Edit" asp-route-userid="@user.Id">
                        <u>
                            Список ролей
                        </u>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>