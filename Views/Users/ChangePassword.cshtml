@model Restaurant.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<div class="card w-50 shadow m-0 ml-auto mr-auto flex-column mt-5 shadow">
    <div class="h4 card-header bg-danger text-center" style="color: white">
        Изменение пароля
    </div>
    <form asp-action="ChangePassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group col-sm-7 px-0 mx-auto mb-3">
            <label asp-for="OldPassword" class="control-label">Старый пароль</label>
            <input type="text" asp-for="OldPassword" class="form-control" />
        </div>
        <div class="form-group col-sm-7 px-0 mx-auto mb-5">
            <label asp-for="NewPassword" class="control-label">Новый пароль</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="card-footer d-flex justify-content-center pt-3 pb-4">
            <input type="submit" value="Сохранить" class="btn btn-danger mx-1" />
            <a asp-action="Index" class="btn btn-secondary mx-1 text-light">Отмена</a>
        </div>
    </form>
</div>